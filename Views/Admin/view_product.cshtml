@model List<macreel_setup.Models.admin.manage_product>

@{
    ViewBag.Title = "view_product";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>View Product List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Product List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="card-title float-right">Product List </h3>
                        </div>
                        <div class="card-body">
                            <table id="example" class="table table-bordered table-hover justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>ProductName</th>
                                        <th>OEM</th>
                                        <th>licenceNo</th>
                                        <th>PartNo</th>
                                        <th>Price</th>
                                        <th>HSNNo</th>
                                        <th>AMC Price</th>
                                        <th>Description</th>
                                        <th>Product Photo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{

                                        int i = 1;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@item.ProductName</td>
                                                <td>@item.OEM</td>
                                                <td>@item.licenceNo</td>
                                                <td>@item.PartNo</td>
                                                <td>@item.Price</td>
                                                <td>@item.HSNNo</td>
                                                <td>@item.AMCPrice</td>
                                                <td>@item.Description</td>
                                                <td>
                                                    <img src="@item.File_Path" width="60px" height="60PX">
                                                </td>
                                                <td><a href="/admin/add_product?id=@(item.id)" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="/admin/delet_products?id=@(item.id)" class="btn btn-danger " style="width:50px"> <i class="fas fa-solid fa-trash"></i></a></td>
                                            </tr>
                                            i++;

                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>


        </div>


        <!-- /.container-fluid -->
    </section>

    </div>