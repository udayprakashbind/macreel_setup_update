@model List<macreel_setup.Models.admin.lead_mangement>
@{
    ViewBag.Title = "view_lead";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

@*<script src="https://code.jquery.com/jquery-3.7.0.js"></script>*@

<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>View Lead List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Lead List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"></h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="leadtable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Lead Segment</th>
                                        <th>Contact Person</th>
                                        <th>Mobile No.</th>
                                        @*    <th>Lead Generated By</th>*@
                                        @* <th>Estimated Lead Value</th>*@
                                        <th>Product Required</th>
                                        @* <th>Lead Status</th>*@
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>@Html.Raw(item.LeadSegment)</td>
                                                <td>@Html.Raw(item.ContactPerson)</td>
                                                <td>@Html.Raw(item.ContactMobileNumber)</td>
                                                @*  <td>@Html.Raw(item.LeadGeneratedBy)</td>*@
                                                @*   <td>@Html.Raw(item.EstimatedLeadValue)</td>*@
                                                <td>@Html.Raw(item.ProductRequired)</td>
                                                @*  <td>@Html.Raw(item.LeadStatus)</td>*@

                                                <td>
                                                    <a href="/admin/viewleaddeatailById?leadId=@(item.LeadID)" class="btn btn-sm showdetail"><i class="fas fa-eye"></i></a>
                                                    <a href="/admin/lead_management?id=@(item.id)"><i class="fas fa-edit"></i></a>
                                                    <a href="/admin/delet_lead?id=@(item.id)"><i class="fas fa-regular fa-trash"></i></a>

                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>





    <div class="modal" id="showleaddetailsModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">lead Details</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <table id="detailstable" class="table">
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>




    <!-- /.content -->
</div>

