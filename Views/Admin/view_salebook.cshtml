@model List<macreel_setup.Models.admin.manage_salebook>

@{
    ViewBag.Title = "view_salebook";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}







<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>View Sale Book List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Sale Book List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="card-title float-right">Sale Book List </h3>
                        </div>
                        <div class="card-body">
                            <table id="example" class="table table-bordered table-hover justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Order No</th>
                                        <th>Quotation Reference</th>
                                        <th>Lead Reference</th>
                                        <th>Employee</th>
                                        <th>Branch</th>
                                        @*<th>Select Bill TO</th>*@
                                        <th>Date</th>
                                        @*<th>Select Ship TO</th>*@
                                        @*<th>Add P.O.R No</th>*@
                                        <th>LAN ID</th>
                                        <th>PromoCode</th>
                                        <th>Domain ID</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.OrderNo</td>
                                                <td>@item.QuotationReference</td>
                                                <td>@item.LeadReference</td>
                                                <td>@item.Employee</td>
                                                <td>@item.Branch</td>
                                                @*<td>@item.SelectBillTO</td>*@
                                                <td>@item.Date</td>
                                                @*<td>@item.SelectShipTO</td>*@
                                                @*<td>@item.Add_PORNo</td>*@
                                                <td>@item.LANID</td>
                                                <td>@item.PromoCode</td>
                                                <td>@item.DomainID</td>
                                                <td><a href="/admin/add_salebook?id=@(item.id)" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="/admin/delet_salebook?id=@(item.id)" class="btn btn-danger " style="width:50px"> <i class="fas fa-solid fa-trash"></i></a></td>
                                            </tr>
                                            i++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>


        </div>


        <!-- /.container-fluid -->
    </section>

</div>





<script>

    $(document).ready(function () {
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,
                responsive: true

            }
        );



    });

</script>
